<div class="row">
  <div class="col-sm-8 offset-sm-2 mt-4">
    <div class="text-center">
      <h2>パスワードを変更する</h2>
    </div>
    <%= simple_form_for(@user, url: password_reset_path(params[:id]), html: { class: 'form-section' }) do |f| %>
      <%= f.error_notification %>
      <%= f.input :email, as: :hidden, input_html: { value: @user.email } %>
      <div class="form-group">
        <%= f.input :password, autofocus: true, label: '新しいパスワード', hint: '(6文字以上)' %>
      </div>
      <div class="form-group">
        <%= f.input :password_confirmation, autocomplete: 'off', label: '確認用新しいパスワード' %>
      </div>
      <div class="form-group">
        <%= f.submit 'パスワードを変更する', class: 'btn btn-primary btn-block btn-lg' %>
      </div>
    <% end %>
  </div>
</div>